<UserControl x:Class="JustLauncher.PlayPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#23272A">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Version selection -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Version:" Foreground="White" VerticalAlignment="Center"/>
            <ComboBox x:Name="VersionComboBox" Width="200" Margin="10,0"/>
            <Button Content="Refresh" x:Name="RefreshVersionsButton" Margin="5,0" Click="RefreshVersionsButton_Click"/>
        </StackPanel>

        <!-- Download panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="Download" x:Name="DownloadButton" Margin="0,0,10,0" Click="DownloadButton_Click"/>
            <Button Content="Download Selected" x:Name="DownloadSelectedButton" Margin="0,0,10,0" Click="DownloadSelectedButton_Click"/>
            <ProgressBar x:Name="DownloadProgressBar" Width="200" Height="20" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Download list and launch -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="DownloadListBox" Grid.Row="0" Height="100" Margin="0,0,0,10" SelectionChanged="DownloadListBox_SelectionChanged"/>
            <Button Content="🚀 Launch Minecraft" x:Name="LaunchButton" Grid.Row="1" Height="40" Margin="0,10,0,0" Click="LaunchButton_Click"/>
        </Grid>

        <!-- Log output -->
        <TextBox x:Name="LogTextBox" Grid.Row="3" Height="100" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Background="#1e2124" Foreground="White"/>
    </Grid>
</UserControl>