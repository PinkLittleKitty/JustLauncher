<Window x:Class="JustLauncher.InstallationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Installation" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Border Background="#23272A" CornerRadius="10" BorderBrush="#404040" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="DialogTitle" Text="Create New Installation" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Background="Transparent" Foreground="White" BorderThickness="0" 
                        FontSize="16" Padding="8" Click="CloseButton_Click"/>
            </Grid>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Installation Name -->
                    <TextBlock Text="Installation Name" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" Margin="0,0,0,15" Padding="10,8" Background="#2A2A2A" 
                             Foreground="White" BorderBrush="#404040" BorderThickness="1"/>

                    <!-- Version Selection -->
                    <TextBlock Text="Version" Foreground="White" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="VersionComboBox" Grid.Column="0" Padding="10,8" Background="#2A2A2A" 
                                  Foreground="White" BorderBrush="#404040" SelectionChanged="VersionComboBox_SelectionChanged"/>
                        <Button x:Name="RefreshVersionsButton" Grid.Column="1" Content="🔄" Margin="5,0,0,0" 
                                Padding="10,8" Click="RefreshVersionsButton_Click"/>
                    </Grid>

                    <!-- Mod Loader (if applicable) -->
                    <StackPanel x:Name="ModLoaderPanel" Visibility="Collapsed">
                        <TextBlock Text="Mod Loader" Foreground="White" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ModLoaderComboBox" Margin="0,0,0,15" Padding="10,8" Background="#2A2A2A" 
                                  Foreground="White" BorderBrush="#404040">
                            <ComboBoxItem Content="None" IsSelected="True"/>
                            <ComboBoxItem Content="Fabric"/>
                            <ComboBoxItem Content="Forge"/>
                            <ComboBoxItem Content="Quilt"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Game Directory -->
                    <TextBlock Text="Game Directory" Foreground="White" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GameDirectoryTextBox" Grid.Column="0" Padding="10,8" Background="#2A2A2A" 
                                 Foreground="White" BorderBrush="#404040" BorderThickness="1"/>
                        <Button Grid.Column="1" Content="Browse" Margin="5,0,0,0" Padding="10,8" 
                                Click="BrowseGameDirectory_Click"/>
                    </Grid>

                    <!-- Java Settings -->
                    <TextBlock Text="Java Executable (Optional)" Foreground="White" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="JavaPathTextBox" Grid.Column="0" Padding="10,8" Background="#2A2A2A" 
                                 Foreground="White" BorderBrush="#404040" BorderThickness="1" 
                                 Text="Use system default"/>
                        <Button Grid.Column="1" Content="Browse" Margin="5,0,0,0" Padding="10,8" 
                                Click="BrowseJavaPath_Click"/>
                    </Grid>

                    <!-- Java Arguments -->
                    <TextBlock Text="Java Arguments" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="JavaArgsTextBox" Margin="0,0,0,15" Padding="10,8" Background="#2A2A2A" 
                             Foreground="White" BorderBrush="#404040" BorderThickness="1" 
                             Text="-Xmx2G -Xms1G"/>

                    <!-- Icon Selection -->
                    <TextBlock Text="Icon" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="IconComboBox" Margin="0,0,0,15" Padding="10,8" Background="#2A2A2A" 
                              Foreground="White" BorderBrush="#404040">
                        <ComboBoxItem Content="🧱 Grass Block" Tag="grass_block" IsSelected="True"/>
                        <ComboBoxItem Content="⛏️ Pickaxe" Tag="pickaxe"/>
                        <ComboBoxItem Content="🗡️ Sword" Tag="sword"/>
                        <ComboBoxItem Content="🏰 Castle" Tag="castle"/>
                        <ComboBoxItem Content="🔥 Fire" Tag="fire"/>
                        <ComboBoxItem Content="💎 Diamond" Tag="diamond"/>
                        <ComboBoxItem Content="🌟 Star" Tag="star"/>
                    </ComboBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="CancelButton" Grid.Column="1" Content="Cancel" Margin="0,0,10,0" 
                        Padding="20,10" Click="CancelButton_Click"/>
                <Button x:Name="CreateButton" Grid.Column="2" Content="Create" 
                        Background="#00C851" Foreground="White" Padding="20,10" 
                        Click="CreateButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>