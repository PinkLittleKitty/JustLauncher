<UserControl x:Class="JustLauncher.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#23272A">
    <Grid Margin="40">
        <Border Background="#2C2F33" Padding="30" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
                <TextBlock Text="Welcome to JustLauncher" FontSize="24" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <TextBlock Text="Choose Account Type:" Foreground="White" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <RadioButton x:Name="OfflineRadio" Content="Offline" IsChecked="True" Margin="0,0,20,0" Foreground="White"/>
                    <RadioButton x:Name="MicrosoftRadio" Content="Microsoft" IsEnabled="False" Foreground="White"/>
                </StackPanel>
                <TextBlock Text="Username:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,20"/>
                <Button Content="Continue" x:Name="ContinueButton" Width="120" Height="35" Click="ContinueButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>